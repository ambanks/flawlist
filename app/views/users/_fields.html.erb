<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :first_name %>
  <%= f.text_field :first_name, autofocus: true, class: "col-lg-1 control-label", class: "form-control"  %>

  <br>
  <%= f.label :last_name %>
  <%= f.text_field :last_name, autofocus: true, class: "col-lg-1 control-label", class: "form-control"  %>

  <br>
  <%= f.label :email_address %>
  <%= f.email_field :email_address, class: "col-lg-1 control-label", class: "form-control"  %>
 
 	<br>
 	<%= f.label :password %>
 	<%= f.password_field :password, class: "col-lg-1 control-label", class: "form-control" %>

 	<br>
 	<%= f.label :password_confirmation, "Confirm password" %>
 	<%= f.password_field	:password_confirmation, class: "col-lg-1 control-label", class: "form-control"  %>

 	<br>
 	<%= link_to "Back", :back, class: "btn btn-default" %><%= f.submit 'Save', class: "btn btn-default" %>
<% end %>

